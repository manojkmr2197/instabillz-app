<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:elevation="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/app_color"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Add Stock"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/stock_create_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_close_24" />
    </LinearLayout>

    <EditText
        android:id="@+id/stock_create_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="@drawable/search_bg"
        android:completionThreshold="1"
        android:dropDownHeight="200dp"
        android:hint="Enter Stock Name"
        android:padding="12dp"
        android:singleLine="true"
        android:inputType="textCapCharacters"
        android:textAllCaps="true"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/stock_create_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:background="@drawable/search_bg"
            android:completionThreshold="1"
            android:dropDownHeight="200dp"
            android:hint="Enter Stock qty"
            android:padding="12dp"
            android:singleLine="true"
            android:inputType="number"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/stock_create_qty_scale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:padding="8dp"
            android:layout_marginEnd="5dp"
            android:textAlignment="center"
            android:background="@drawable/spinner_bg"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:text="Choose Vendor"
        android:textColor="@color/app_color"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/stock_create_vendor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/spinner_bg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/stock_create_submit"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:backgroundTint="@color/app_color"
            android:text="Submit" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>