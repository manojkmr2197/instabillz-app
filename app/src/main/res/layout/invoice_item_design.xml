<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <!-- Top Row (Token + Date + Actions) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/invoice_edit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_edit_24"
                app:tint="#1976D2" />

            <TextView
                android:id="@+id/invoice_token"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Token #123"
                android:textColor="#222222"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/invoice_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="2025-10-10"
                android:textColor="#666"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/invoice_delete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_clear_24"
                app:tint="#E53935" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="6dp"
            android:background="#E0E0E0" />

        <!-- Summary Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/invoice_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: ₹1200"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/invoice_selling_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selling: ₹950"
                    android:textColor="#4CAF50"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/invoice_payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mode: UPI"
                    android:textColor="#205C9B"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/invoice_parcel_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parcel: ₹50"
                    android:textColor="#FF9800"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Expand/Collapse Button -->
        <LinearLayout
            android:id="@+id/product_toggle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/invoice_toggle_products_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Products ▼"
                android:textColor="@color/app_color"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Expandable Product List -->
        <LinearLayout
            android:id="@+id/invoice_products_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:visibility="gone">

            <!-- Example product row -->
            <!-- These will be dynamically added -->
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
