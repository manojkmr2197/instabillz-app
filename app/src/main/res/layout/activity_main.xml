<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".activity.MainActivity">

    <!-- Owner Logo -->
    <ImageView
        android:id="@+id/ownerLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/app_image"
        android:alpha="0"
        android:layout_gravity="center" />

    <!-- Partnership Icon (hidden initially) -->
    <ImageView
        android:id="@+id/partnershipIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/partnership"
        android:alpha="0"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" />

    <!-- Client Logo (hidden initially) -->
    <ImageView
        android:id="@+id/clientLogo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/client_logo"
        android:alpha="0"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" />

</LinearLayout>
