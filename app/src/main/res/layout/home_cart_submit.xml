<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cartTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="Your Cart"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cart_close"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="#E53935" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cartItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/search_bg"
            android:padding="4dp"
            android:textSize="16sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/bill_parcel_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:background="@drawable/search_bg"
            android:completionThreshold="1"
            android:dropDownHeight="200dp"
            android:hint="Enter Parcel Amount"
            android:inputType="number"
            android:padding="12dp"
            android:singleLine="true"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/cartTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="8dp"
        android:text="Total: â‚¹0"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:gravity="center"
        android:text="Payment Details"
        android:textSize="18sp"
        android:textStyle="bold" />


    <RadioGroup
        android:id="@+id/new_bill_payment_radio_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/new_billing_payment_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CASH" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/new_billing_payment_upi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPI" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCheckoutSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/app_color"
            android:text="Save"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnCheckoutPrint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/app_color"
            android:text="Save &amp; Print"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
